@model LanchoneteSprint2.Models.Produto

@{
    ViewData["Title"] = "Create";
}

<h1>Produtos</h1>

<h4>Adicionar produto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estoque" class="control-label"></label>
                <input asp-for="Estoque" class="form-control" />
                <span asp-validation-for="Estoque" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecoUn" class="control-label"></label>
                <input asp-for="PrecoUn" type="number" class="form-control" />
                <span asp-validation-for="PrecoUn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CadProdutoId" class="control-label"></label>
                <select asp-for="CadProdutoId" class ="form-control" asp-items="ViewBag.CadProdutoId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class ="form-control" asp-items="ViewBag.FornecedorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar pra lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
