@model IEnumerable<LanchoneteSprint2.Models.VendeItem>

@{

    ViewData["Title"] = "Index";
    var id = ViewData["VendaId"];
}


<h1>Index</h1>

<p>
    <a asp-action="Create" asp-route-id=@id>Adicionar Venda</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Produto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadVendas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Qtd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Produto.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CadVendas.Nota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Qtd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VendeItemId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.VendeItemId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.VendeItemId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
